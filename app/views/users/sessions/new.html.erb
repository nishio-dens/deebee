<div class="login-box">
  <div class="login-logo">
    <b>Trans1</b><br>
  </div><!-- /.login-logo -->
  <div class="login-box-body">

    <p class="login-box-msg">
      i18n Quality Management System <br>
      Sign in to start your session
    </p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-feedback field">
        <%= f.email_field :email, type: 'email', autofocus: true, class: 'form-control', placeholder: 'Email' %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback field">
        <%= f.password_field :password, type: :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <div class="actions">
            <button class="btn btn-primary btn-block btn-flat" type="submit">Sign In</button>
          </div>
        </div>
      </div>
    <% end %>
  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
